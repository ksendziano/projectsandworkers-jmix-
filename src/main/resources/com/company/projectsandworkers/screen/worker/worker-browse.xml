<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://workerBrowse.caption"
        focusComponent="workersTable">
    <data readOnly="true">
        <collection id="workersDc"
                    class="com.company.projectsandworkers.entity.Worker">
            <fetchPlan extends="_base"/>
            <loader id="workersDl">
                <query>
                    <![CDATA[select e from Worker e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="workersTable" spacing="true">
        <groupTable id="workersTable"
                    width="100%"
                    dataContainer="workersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="middleName"/>
                <column id="age"/>
                <column id="lastName"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="workersTable.create" caption="Create"/>
                <button id="editBtn" action="workersTable.edit" caption="Edit"/>
                <button id="refreshBtn" action="workersTable.refresh" caption="Refresh"/>
                <button id="removeBtn" action="workersTable.remove" caption="Remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
